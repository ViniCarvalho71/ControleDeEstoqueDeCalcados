@model ControleDeEstoqueDeCalcados.Models.Sapato;

@{
    ViewData["Title"] = "Registrar Novo Sapato";
}

<h1>Registrar novo sapato</h1>

<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div class="form-group">
                <label asp-for="Tipo" class="control-label">Tipo</label>
                <input asp-for="Tipo" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label asp-for="CodBarras" class="control-label">CodBarras</label>
                <input asp-for="CodBarras" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label asp-for="Cor" class="control-label">Cor</label>
                <input asp-for="Cor" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label asp-for="Tamanho" class="control-label">Tamanho</label>
                <input asp-for="Tamanho" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label">Preco</label>
                <input asp-for="Preco" class="form-control" type="text"/>
            </div>
            <div class="form-group">
                <input asp-for="Status" class="form-control d-none" type="number" value="1"/>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>